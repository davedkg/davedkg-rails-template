{
  "name": "DaveDKG Rails Template",
  "description": "Deploy this customizable Ruby on Rails starter template to Heroku in seconds.",
  "repository": "https://github.com/davedkg/davedkg-rails-template",
  "keywords": [
    "heroku",
    "rails",
    "postgresql",
    "rspec",
    "stimulusjs",
    "bootstrap",
    "pundit"
  ],
  "scripts": {
    "postdeploy": "bundle exec rake acceptance:setup",
    "pr-predestroy": "bundle exec rake acceptance:teardown"
  },
  "formation": {
    "worker": {
      "quantity": 1
    },
    "web": {
      "quantity": 1
    }
  },
  "env": {
    "APP_DOMAIN": {
      "description": "Custom domain name.",
      "required": true
    },
    "ASSET_DOMAIN": {
      "description": "Custom asset CDN domain name.",
      "required": false
    },
    "WEB_CONCURRENCY": {
      "description": "The number of processes to run.",
      "value": "5"
    }
  },
  "addons": [
    "heroku-redis",
    "heroku-postgresql:hobby-dev",
    "newrelic",
    "sendgrid",
    "sentry"
  ],
  "image": "heroku/ruby"
}