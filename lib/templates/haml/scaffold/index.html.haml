%header.content__title
  %h1= page_title
  .actions
    - if policy(<%= singular_table_name.titleize %>).new?
      = link_to new_<%= singular_table_name %>_path, class: "btn btn-outline-primary btn-sm" do
        %i.fa.fa-plus
        .d-none.d-sm-inline
          <%= singular_table_name.titleize %>

.card
  %table.table.table-striped.mb-0
    %thead
      %tr
      <%- attributes.each do |attribute| -%>
        %th <%= attribute.name.humanize %>
      <%- end -%>
        %th &nbsp;
    %tbody{ id: "<%= plural_table_name %>-body" }
      = render 'table_rows'
  %div{ id: "<%= plural_table_name %>-paginator" }
    = render "paginator"