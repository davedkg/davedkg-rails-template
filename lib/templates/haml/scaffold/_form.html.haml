-# frozen_string_literal: true
= simple_form_for(@<%= singular_table_name %>) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
  <%- attributes.each do |attribute| -%>
    = f.<%= attribute.reference? ? :association : :input %> :<%= attribute.name %>, wrapper: :floating_labels_form, placeholder: "<%= attribute.name.humanize %>"
  <%- end -%>

  .form-actions
    = f.button :submit, data: { "disable-with": "Saving..." }
    = link_to "Back", cancel_path, class: "btn btn-default ms-2", data: { turbo_frame: "_top" }
