%table{:cellpadding => "0", :cellspacing => "0", :width => "100%"}
  %tr
    %td.content-block
      = t("devise.mailer.invitation_instructions.hello", email: @resource.email)
  %tr
    %td.content-block
      = t("devise.mailer.invitation_instructions.someone_invited_you", url: root_url)
  %tr
    %td.content-block.aligncenter
      = link_to t("devise.mailer.invitation_instructions.accept"), accept_invitation_url(@resource, :invitation_token => @token), class: 'btn-primary', style: 'color:white'
  - if @resource.invitation_due_at
    %tr
      %td.content-block
        %p= t("devise.mailer.invitation_instructions.accept_until", due_date: l(@resource.invitation_due_at, format: :'devise.mailer.invitation_instructions.accept_until_format'))
  %tr
    %td.content-block
      = t("devise.mailer.invitation_instructions.ignore").html_safe

