.login
  .login__block.active
    .login__block__header
      %i.zmdi.zmdi-account-circle
      Change your Password
      .actions.actions--inverse.login__block__actions
        .dropdown
          %i.zmdi.zmdi-more-vert.actions__item{"aria-expanded" => "false", "data-toggle" => "dropdown"}
          .dropdown-menu.dropdown-menu-right{:style => "position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(-123px, 30px, 0px);", "x-placement" => "bottom-end"}
            = link_to "Sign In", new_user_session_path, class: "dropdown-item"
    .login__block__body
      = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, wrapper: :centered_form) do |f|
        = f.error_notification
        = f.input :reset_password_token, as: :hidden
        = f.full_error :reset_password_token
        = f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
        = f.input :password_confirmation, label: "Confirm your new password", required: true
        = f.button :button, type: :submit, class: 'btn btn--icon login__block__btn' do
          %i.zmdi.zmdi-check
