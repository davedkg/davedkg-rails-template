.row{ "data-turbolinks-animate-persist" => "true" }
  .col-lg-10
    %ol.breadcrumb
      - breadcrumb_trail do |crumb|
        %li.breadcrumb-item{ class: "#{crumb.current? ? 'active' : '' }" }
          / - if crumb.current?
          /   %strong= crumb.name
          / - else
          = link_to crumb.name, crumb.url