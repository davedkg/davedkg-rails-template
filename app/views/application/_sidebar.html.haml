%nav.navbar-default.navbar-static-side{ role: "navigation", "data-turbolinks-animate-persist" => "true" }
  .sidebar-collapse
    %ul#side-menu.nav.metismenu
      %li.nav-header
        .dropdown.profile-element
          %img.rounded-circle{ gravatar_attrs(@user, size: 50) }/
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            %span.block.m-t-xs.font-bold
              = current_user.email
      %li{ class: active_sidebar_tab(:dashboard) }
        = link_to root_path do
          %i.fa.fa-tachometer-alt
          %span.nav-label Dashboard

      - if policy(User).index?
        %li{ class: active_sidebar_tab(:users) }
          = link_to users_path do
            %i.fa.fa-users
            %span.nav-label Users

      %li
        = link_to '#', { "aria-expanded"=>"false" } do
          %i.fa.fa-user-shield
          %span.nav-label Developer
          %span.fa.arrow
        %ul.nav.nav-second-level.collapse
          %li= link_to "Resque", "/resque", target: "_blank"
          - if Rails.env.development?
            %li= link_to "Component Previews", "/rails/components"
            %li= link_to "Email Previews", "/rails/mailers", target: "_blank"
            %li= link_to "Letter Opener", "/letter-opener", target: "_blank"

