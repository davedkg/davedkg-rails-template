- if policy(User).new?
  - content_for(:page_actions) do
    = link_to new_user_path, class: "btn btn-success btn-lg fw-semibold" do
      %i.fa.fa-plus
      .d-none.d-sm-inline
        Invite User

.card
  .card-body
    .table-responsive
      %table.table.table-striped
        %thead
          %tr
            %th Name
            %th.d-none.d-md-table-cell State
            %th &nbsp;
        %tbody{ id: "body" }
          = render 'users'
      %div{ id: "paginator" }
        = render "paginator"
