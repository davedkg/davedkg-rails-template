%header.content__title
  %h1= page_title
  .actions
    - if policy(User).new?
      %a.btn.btn-primary{ href: new_user_path }
        %i.fa.fa-plus
        .d-none.d-sm-inline
          Invite User

.card
  .card-body
    %table.table.table-striped.mb-0
      %thead
        %tr
          %th Name
          %th.d-none.d-md-table-cell Email
          %th.d-none.d-md-table-cell Role
          %th &nbsp;
      %tbody{ id: "users-body" }
        = render 'users'
    %div{ id: "users-paginator" }
      = render "paginator"
