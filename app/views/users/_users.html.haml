- @users.each do |user|
  %tr
    %td
      = user.email
    %td
      - if !user.invitation_accepted_at?
        = link_to resend_invitation_user_path(user), class: "btn btn-info btn-xs", data: { method: :post, confirm: "Are you sure?" } do
          %i.fa.fa-envelope-open
          Resend Invitation
      - if user != current_user
        = link_to user, class: "btn btn-danger btn-xs", data: { method: :delete, confirm: "Are you sure?" } do
          %i.fa.fa-trash
          Delete