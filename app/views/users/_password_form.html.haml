= turbo_frame_tag "password-form" do
  = simple_form_for(@user, url: { action: :update_password }) do |f|
    = f.error_notification
    = f.input :password
    = f.input :password_confirmation
    = f.button :submit, "Update", data: { "disable-with": "Updating..." }
    = link_to "Cancel", user_path(@user), class: "btn btn-secondary ms-2", data: { turbo_frame: "_top" }