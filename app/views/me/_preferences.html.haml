.card.bg-body-tertiary.mb-3
  .card-header
    %h5.card-title About
  .card-body
    = render 'me_form'

.card.bg-body-tertiary
  .card-header
    %h5.card-title Browser
  .card-body
    .btn-group{ "aria-label" => "Preferences Theme", :role => "group" }
      %button.btn.btn-primary{ data: { action: "click->theme#changeTheme", theme: "LIGHT", theme_target: "light" } }
        = material_icon("light_mode")
        Light
      %button.btn.btn-primary{ data: { action: "click->theme#changeTheme", theme: "DARK", theme_target: "dark" } }
        = material_icon("dark_mode")
        Dark
      %button.btn.btn-primary{ data: { action: "click->theme#changeTheme", theme: "AUTO", theme_target: "auto" } }
        = material_icon("routine")
        Auto
