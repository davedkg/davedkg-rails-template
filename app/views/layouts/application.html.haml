!!!
%html{ data: { bs_theme: "light", sidebar_toggled: "no" } }
  %head
    :javascript
      document.documentElement.dataset.sidebarToggled = localStorage.getItem("SIDEBAR_TOGGLED") || "no"
    = render 'head'
  %body
    .main-container{ data: { controller: "sidebar" } }
      = render 'sidebar'
      .body-container
        = render 'navbar'
        .scrollable-body-container
          = render 'flash'
          = yield
    = turbo_frame_tag :modal