!!!
%html{ data: { bs_theme: "LIGHT" } }
  %head
    = render 'head'
  %body
    .container.vh-100.d-flex.align-items-center.justify-content-center
      .card{ style: "max-width: 400px; width: 400px" }
        .card-body
          .text-center
            %h4.card-title= page_title
            %h6.card-subtitle.text-body-secondary.mb-3= PLATFORM_TITLE
          = render 'flash'
          = yield
