!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0, shrink-to-fit=no", :name => "viewport"}/
    %title= "#{page_title} | #{PLATFORM_TITLE}"
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  = component 'turbolinks-animate', animation: @turbolinks_animate_animation, class: "d-flex justify-content-center", "data-ma-theme"=>"blue" do
    .login
      .login__block.active
        .login__block__header
          %i.zmdi.zmdi-account-circle
          = page_title
        .login__block__body
          = render 'flash'
          = yield
          = render "splash/links"