= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f|
  = f.hidden_field :invitation_token
  = f.error_notification
  = f.input :email, disabled: true, wrapper: :floating_labels_form, wrapper_html: { class: "form-group--centered" }
  = f.input :name, autofocus: true, wrapper: :floating_labels_form, wrapper_html: { class: "form-group--centered" }
  = f.input :time_zone, wrapper: :floating_labels_form, wrapper_html: { class: "form-group--centered" }
  = f.input :password, wrapper: :floating_labels_form, wrapper_html: { class: "form-group--centered" }
  = f.input :password_confirmation, wrapper: :floating_labels_form, wrapper_html: { class: "form-group--centered" }
  = f.button :submit, t("devise.invitations.edit.submit_button"), class: "btn-theme btn-lg d-block w-100 fw-semibold", data: { "disable-with": "Accepting Invitation..." }