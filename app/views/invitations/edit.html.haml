= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put, class: "m-t" }) do |f|
  = f.hidden_field :invitation_token
  = f.error_notification
  = "Email: #{resource.email}"
  = f.input :password
  = f.input :password_confirmation
  = f.button :submit, t("devise.invitations.edit.submit_button"), class: "block full-width m-b"